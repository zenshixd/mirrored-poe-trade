// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../../src/generated/client-mpt"
}

datasource db {
  provider = "mysql"
  url      = env("MPT_DB_URL")
}

model PublicStash {
  id          String @id
  name        String
  accountName String
  league      String
}

model League {
  id               Int     @id @default(autoincrement())
  name             String  @unique
  isStandardLeague Boolean
  isPrivateLeague  Boolean
  isEventLeague    Boolean
}

model ItemListing {
  id       String @id
  stashId  String
  leagueId Int

  name          String
  typeLine      String
  baseType      String
  itemLevel     Int
  category      String
  subcategories String
  priceValue    Int
  priceUnit     String
}

model AppState {
  key   String @id
  value String
}
